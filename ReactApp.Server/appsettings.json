{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",
      "ReactApp.Server": "Information"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
    "DefaultConnection": "YOUR_DATABASE_CONNECTION_STRING"
  },

  "Jwt": {
    "SecretKey": "YOUR_JWT_SECRET_KEY_AT_LEAST_256_BITS",
    "Issuer": "KindergartenApp",
    "Audience": "KindergartenApp",
    "AccessTokenExpirationMinutes": 1440,
    "RefreshTokenExpirationDays": 7
  },

  "Media4U": {
    "BasicAuthUser": "YOUR_MEDIA4U_USERNAME",
    "BasicAuthPassword": "YOUR_MEDIA4U_PASSWORD",
    "ApiEndpoint": "https://www.sms-ope.com/sms/api/"
  },

  "Development": {
    "DisableSms": true
  },

  "RateLimit": {
    "AuthPolicy": {
      "PermitLimit": 10,
      "WindowMinutes": 1
    },
    "SmsPolicy": {
      "PermitLimit": 3,
      "WindowMinutes": 60
    },
    "VerifyPolicy": {
      "PermitLimit": 5,
      "WindowMinutes": 5
    }
  },

  "Azure": {
    "Storage": {
      "ConnectionString": "YOUR_AZURE_STORAGE_CONNECTION_STRING",
      "PhotoContainerName": "claude-dev-photo",
      "ThumbnailContainerName": "claude-dev-photo",
      "AttachmentContainerName": "nurseries-attachment",
      "CdnEndpoint": ""
    }
  },

  "AzureBlobStorage": {
    "BaseUrl": "https://YOUR_STORAGE_ACCOUNT.blob.core.windows.net",
    "ContainerName": "photos"
  },

  "AzureTranslator": {
    "SubscriptionKey": "YOUR_AZURE_TRANSLATOR_KEY",
    "Endpoint": "https://api.cognitive.microsofttranslator.com",
    "Region": "japanwest"
  }
}
